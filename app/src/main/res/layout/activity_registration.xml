<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--text view for heading-->
            <TextView
                android:id="@+id/loginHeaderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/poppins"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="#101D6B"
                android:textSize="40sp" />

            <!--edit text for user name-->
            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins"
                android:hint="Enter Name"
                android:inputType="textEmailAddress" />

            <!--edit text for user password-->
            <EditText
                android:id="@+id/editTextICNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins"
                android:hint="Enter IC Number"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins"
                android:hint="Enter Address"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editTextPhoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins"
                android:hint="Enter Phone Number"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editTextUsernameSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins"
                android:hint="Enter Username"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/passwordfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins"
                android:hint="Enter Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/passwordConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins"
                android:hint="Confirm Password"
                android:inputType="textPassword" />

            <!--edit text for user confirm password-->

            <!--edit text for user confirm password-->

            <!--button to register our new user-->

            <Button
                android:id="@+id/signUpButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70px"
                android:layout_marginBottom="30dp"
                android:background="#101D6B"
                android:text="SIGN UP"
                android:textColor="#FEFEFE" />

        </LinearLayout>


    </ScrollView>



</LinearLayout>