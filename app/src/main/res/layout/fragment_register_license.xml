<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RegisterLicenseFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="399dp"
        android:layout_height="160dp"
        card_view:cardBackgroundColor="@color/babyblue"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nNOTICE \n\n\nYou must register for a licence first before you can start
            scheduling classes. Please register below.\n\nABC Bank\n0011223344556677"
            android:textAlignment="center"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:background="@android:drawable/editbox_background"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="6dp">

        <TextView
            android:id="@+id/labelSelectLicenceType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="0dp"
            android:textColor="@color/black"
            android:text="Licence Type:" />

        <Spinner
            android:id="@+id/spinLicenceType"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:entries="@array/licenceType_arrays"
            android:padding="15dp"/>


    </RelativeLayout>




    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="6dp"
        android:padding="10dp"
        android:layout_marginTop="310dp"
        android:text="  Total Price: "
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@android:drawable/editbox_background"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="6dp">

        <TextView
            android:id="@+id/labelUploadFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:textColor="@color/black"
            android:text="Upload Payment Receipt:" />

        <Button
            android:id="@+id/button_uploadFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="35dp"
            android:layout_weight="0"
            android:text="Upload file" />

    </RelativeLayout>


    <Button
        android:id="@+id/btnRegisterLicence"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="150dp"
        android:backgroundTint="@color/babyblue"
        android:gravity="center_vertical"
        android:layout_marginTop="470dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER" />




</FrameLayout>